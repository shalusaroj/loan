<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_page">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_icon" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi User"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/poppins_semibold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="GOOD MORNING"
        android:textColor="@color/purple_700"
        android:textSize="25dp"
        android:layout_marginTop="-7dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:outlineSpotShadowColor="@color/white"
                    android:backgroundTint="#f6edff"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/booking"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/booking" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily\nCollection"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#e9feff"
                    android:outlineSpotShadowColor="@color/white"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/meeting"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/meeting" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly\nCollection"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#fff6de"
                    android:outlineSpotShadowColor="@color/white"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/directory"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/directory" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Loan\nDisburstment"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="15dp"
                android:layout_alignParentStart="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardvieww"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#f2edff"
                    android:outlineSpotShadowColor="@color/white"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/parking"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/sharing" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total\nOustanding"
                    android:textAlignment="center"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerInParent="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardvieww2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#ffedef"
                    android:outlineSpotShadowColor="@color/white"
                    android:elevation="5dp"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/ticket"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/ticket" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Quantity\nOf Loan Account"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins_semibold"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardvieww3"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:backgroundTint="#e9f3ff"
                    android:elevation="5dp"
                    android:outlineSpotShadowColor="@color/white"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:id="@+id/visitor"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:elevation="10dp"
                        android:src="@drawable/visitor" />

                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:textSize="10sp"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins_semibold"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#eafbf8"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact your teammate"
                    android:textColor="#0e0f0f"
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="#9fa7a6"
                    android:textSize="11sp"
                    android:layout_marginStart="15dp"
                    android:fontFamily="@font/poppins_semibold"/>

                <Button
                    android:layout_width="135dp"
                    android:layout_height="45dp"
                    android:background="@drawable/button_shape"
                    android:text="Quick Connect"
                    android:id="@+id/btn"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="8dp"
                    android:textSize="11sp"
                    android:layout_marginBottom="18dp"/>

            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/teamwork"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>